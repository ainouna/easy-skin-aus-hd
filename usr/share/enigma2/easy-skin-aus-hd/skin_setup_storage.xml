<skin>
	<!-- Harddisk Setup use SETUP screen skin -->
	<!-- Format and Initialize -->
	<screen position="0,0" size="1280,720" name="HarddiskSelection" flags="wfNoBorder" backgroundColor="un44000000" title="Select HDD">
		<panel name="FullScreenWindow" />
		<panel name="FullScreenColourPanel" />
		<widget name="hddlist" position="590, 100" size="610, 500" itemHeight="50" selectionPixmap="easy-skin-aus-hd/menu/on_main_menu_595x50.png" backgroundColor="#41000000" scrollbarMode="showOnDemand" enableWrapAround="1" transparent="1"/>
		<ePixmap pixmap="easy-skin-aus-hd/menu/mainmenu_source_mount.png" position="55, 155" size="300,500"/>
	</screen>
	<!-- Harddisk setup -->
	<screen position="0,0" size="1280,720" name="HarddiskSetup" flags="wfNoBorder" backgroundColor="un44000000" title="Harddisk Setup">
		<panel name="SetupCommon" />
		<widget position="60,125" size="380,60" name="model" font="Regular;22" transparent="1" zPosition="1"/>
		<widget position="60,195" size="380,30" name="capacity" font="Regular;22" transparent="1" zPosition="1"/>
		<widget position="60,220" size="380,30" name="bus" font="Regular;22" transparent="1" zPosition="1"/>
		<widget position="123, 635" size="200,36" name="initialize" backgroundColor="#9f1313" transparent="1" zPosition="3"/>
		<widget position="123, 635" size="200,36" name="initializetext" backgroundColor="#9f1313" font="Regular;20" halign="center" transparent="1" valign="center" zPosition="3"/>
        </screen>
	<!-- Harddisk wait -->
	<screen position="0,0" size="1280,720" name="HarddiskWait" flags="wfNoBorder" backgroundColor="un44000000" title="Harddisk wait">
		<widget position="390,450" size="500,25" name="wait" font="Regular;23" halign="center" transparent="1" valign="center" zPosition="1"/>
	</screen>
</skin>