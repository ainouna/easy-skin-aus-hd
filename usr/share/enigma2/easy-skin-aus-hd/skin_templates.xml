<skin>
<!-- Screen Overlay Templates -->

<!-- Screen layer to add heading clock, title and pin stripes  -->

<!--
 |  This is only used in AutoTimerSettings, GnewsFeedScreenList,
 |  GnewsFeedScreenContent, UpdatePlugin and ParentalControlSetup.
 +-->

	<screen name="FullScreenWindow">
		<panel name="FullScreenWindowCommon"/>
	</screen>

<!-- Screen layer to add heading clock, title and pin stripes -->

	<screen name="FullScreen2Window">
		<panel name="FullScreenWindowCommon"/>
	</screen>

<!-- 
 |   Common parts of screen layers to add heading clock, title and
 |   pin stripes. Base for FullScreenWindow and FullScreen2Window.
 +-->

	<screen name="FullScreenWindowCommon">
		<ePixmap alphatest="on" pixmap="easy-skin-hd/icons/clock.png" position="50,36" size="14,14" zPosition="3" />
		<widget backgroundColor="black" font="Named;22" foregroundColor="white" halign="left" position="75,30" render="Label" size="280,25" source="global.CurrentTime" transparent="1">
			<convert type="ClockToText">Format:%a %e-%b-%Y	 %H:%M</convert>
		</widget>
		<widget backgroundColor="black" font="Named;25" foregroundColor="white" halign="right" position="360,30" render="Label" size="820,35" source="Title" transparent="1" />
		<eLabel backgroundColor="grey" position="50,65" size="1180,1" zPosition="2" />
		<eLabel backgroundColor="grey" position="50,625" size="1180,1" zPosition="1" />
	</screen>

<!-- Screen layer to add the MENU button hint -->

	<screen name="FullscreenMenuButtonPanel">
