<skin>
<!-- Power / Restart and Information Menu Screens -->

<!-- Power / Restart (MENU > Power) Menu -->

	<screen backgroundColor="background" flags="wfNoBorder" name="menu_shutdown" position="0,0" size="1280,720" title="Power / Restart">
		<panel name="FullScreen2Window" />
		<widget backgroundColor="#41000000" position="665,115" render="Listbox" scrollbarMode="showOnDemand" selectionPixmap="easy-skin-hd/menu/on_main_menu_485x50.png" size="500,500" source="menu" transparent="1">
			<convert type="TemplatedMultiContent">
				{
				"template": [ MultiContentEntryText(pos = (20, 8), size = (400, 30), flags = RT_HALIGN_LEFT | RT_VALIGN_CENTER, text = 0),
						MultiContentEntryText(pos = (415, 10), size = (50, 30), flags = RT_HALIGN_RIGHT | RT_VALIGN_CENTER, text = 4) ],
				"fonts": [gFont("Regular", 24)],
				"itemHeight": 50
				}
			</convert>
		</widget>
		<widget alphatest="on" pixmap="easy-skin-hd/menu/mainmenu_tasks_power_sleeptimer.png" position="200,100" render="Pixmap" size="300,500" source="menu" zPosition="1">
			<convert type="MenuEntryCompare">mainmenu_tasks_power_sleeptimer</convert>
			<convert type="ConditionalShowHide" />
		</widget>
		<widget alphatest="on" pixmap="easy-skin-hd/menu/mainmenu_tasks_power_standby.png" position="200,100" render="Pixmap" size="300,500" source="menu" zPosition="1">
			<convert type="MenuEntryCompare">mainmenu_tasks_power_standby</convert>
			<convert type="ConditionalShowHide" />
		</widget>
		<widget alphatest="on" pixmap="easy-skin-hd/menu/mainmenu_tasks_power_reboot.png" position="200,100" render="Pixmap" size="300,500" source="menu" zPosition="1">
			<convert type="MenuEntryCompare">mainmenu_tasks_power_reboot</convert>
			<convert type="ConditionalShowHide" />
		</widget>
		<widget alphatest="on" pixmap="easy-skin-hd/menu/mainmenu_tasks_power_shutdown.png" position="200,100" render="Pixmap" size="300,500" source="menu" zPosition="1">
			<convert type="MenuEntryCompare">mainmenu_tasks_power_shutdown</convert>
			<convert type="ConditionalShowHide" />
		</widget>
		<widget alphatest="on" pixmap="easy-skin-hd/menu/mainmenu_tasks_power_restartshell.png" position="200,100" render="Pixmap" size="300,500" source="menu" zPosition="1">
			<convert type="MenuEntryCompare">mainmenu_tasks_power_restartshell</convert>
			<convert type="ConditionalShowHide" />
		</widget>
	</screen>	

<!-- Information (MENU > Information) Menu -->

	<screen backgroundColor="background" flags="wfNoBorder" name="Menu" position="0,0" size="1280,720" title="Information">
		<panel name="FullScreen2Window" />
		<ePixmap alphatest="on" pixmap="easy-skin-hd/menu/mainmenu_tasks_setup_tv.png" position="200,100" size="300,500" zPosition="2" />
		<widget backgroundColor="#41000000" position="665,115" render="Listbox" scrollbarMode="showOnDemand" selectionPixmap="easy-skin-hd/menu/on_main_menu_485x50.png" size="500,500" source="menu" transparent="1">
			<convert type="TemplatedMultiContent">
				{
				"template": [ MultiContentEntryText(pos = (20, 8), size = (400, 30), flags = RT_HALIGN_LEFT | RT_VALIGN_CENTER, text = 0),
						MultiContentEntryText(pos = (415, 10), size = (50, 30), flags = RT_HALIGN_RIGHT | RT_VALIGN_CENTER, text = 4) ],
				"fonts": [gFont("Regular", 24)],
				"itemHeight": 50
				}
			</convert>
		</widget>
	</screen>

<!-- About Information (MENU > Information > About) Screen -->
<!-- Devices Information (MENU > Information > Devices) Screen -->
<!-- Memory Information (MENU > Information > Memory) Screen -->

<!--
 |  The height of the window widget that holds the data should be sized to 
 |  fit the available screen space rather than some random size.  This will 
 |  make the skin more flexible for future use and reuse.
 +-->

	<screen backgroundColor="background" flags="wfNoBorder" name="About" position="0,0" size="1280,720" title="About">
		<panel name="FullScreen2Window" />
		<ePixmap pixmap="easy-skin-hd/menu/mainmenu_tasks_info.png" position="150,100" size="300,500" zPosition="2" />
		<widget font="Regular;22" halign="left" name="AboutScrollLabel" position="500,115" size="580,379" transparent="1" zPosition="2" />
	</screen>

<!-- Network Information (MENU > Information > Network) Screen -->

<!--
 |  This should be the same screen as the others of this type above except 
 |  that some network status stuff has been grafted in as skin hacks!!!  This 
 |  should really come from the code that populates the networking data in 
 |  the first place.
 +-->

	<screen backgroundColor="background" flags="wfNoBorder" name="SystemNetworkInfo" size="1280,720" title="About">
		<panel name="FullScreen2Window" />
		<ePixmap pixmap="easy-skin-hd/menu/mainmenu_tasks_info.png" position="150,100" size="300,500" zPosition="2" />
		<widget backgroundColor="window-bg" font="Regular;20" halign="left" position="500,115" render="Label" size="120,21" source="IFtext" transparent="1" zPosition="10" />
		<widget backgroundColor="window-bg" font="Regular;20" halign="left" source="IF" render="Label" position="677,115" size="600,21" transparent="1" zPosition="10" />
		<widget backgroundColor="window-bg" font="Regular;20" halign="left" source="Statustext" render="Label" position="500,138" size="115,21" transparent="1" zPosition="10" />
		<widget alphatest="on" name="statuspic" pixmaps="buttons/button_green.png,buttons/button_green_off.png" position="677,138" zPosition="10" size="15,16" transparent="1" />
		<widget font="Regular;22" halign="left" name="AboutScrollLabel" position="500,185" size="580,560" transparent="1" zPosition="2" />
	</screen>

<!-- Sevice Information (MENU > Information > Service) Screens -->

	<screen backgroundColor="un44000000" flags="wfNoBorder" name="ServiceInfo" position="0,0" size="1280,720" title="Serviceinfo">
